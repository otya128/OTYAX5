+    IF A==1THEN X=WI-(L-I+1)*8
+    IF A==2THEN X=(WI-(L-I+1)*8)/2
+   ENDIF
+  ENDIF
+  IF Y>=HE THEN BREAK
+  GPUTCHRWindow W,X,Y,C,RGB(0,0,0)
+  INC X,8
+ NEXT
+ E=GEndWindow(W)
+END
