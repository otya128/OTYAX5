+DEF LabelPainter W,CT,T,A1,A2
+ VAR E=GBeginWindow(W)
+ IF E THEN RETURN
+ VAR NA$=GetWindowName$(W)
+ VAR HE=GetWindowHeight(W)
+ VAR WI=GetWindowWidth(W)
+ VAR A=GetWindowVar(W,1)
