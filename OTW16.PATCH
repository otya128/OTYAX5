+ VAR X,Y,C,I,L=LEN(NA$),HB=WI/8
+ IF!HB THEN RETURN
+ IF L<HB THEN
+  IF A==1THEN X=WI-L*8
+  IF A==2THEN X=(WI-L*8)/2
+ ENDIF
+ DEC L
